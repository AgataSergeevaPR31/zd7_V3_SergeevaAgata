<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.Room">
    <ContentPage.Resources>
        <StyleSheet Source="style.css" />
    </ContentPage.Resources>
    <StackLayout Padding="20">
        <Label  x:Name="header" StyleId="header"
                Text="Расчёт стоимости" />

        <Label x:Name="CostLabel"
               FontSize="20"
               HorizontalOptions="Center" />

        <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button Text="На главную страницу" StyleClass="button" Clicked="OnHomePageClicked" />
            <Button Text="Выбор количества мест" StyleClass="button" Clicked="OnSelectPlacesClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>